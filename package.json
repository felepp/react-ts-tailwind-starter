{
  "name": "react-ts-tailwind",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.1",
    "@testing-library/user-event": "^12.2.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.19.4",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0",
    "typescript": "^4.0.5",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "postcss": "^8.1.7",
    "postcss-cli": "^8.2.0",
    "tailwindcss": "^1.9.6"
  },
  "scripts": {
    "start": "concurrently -n \"css,react\" \"npm run css:watch\" \"react-scripts start\"",
    "build": "cross-env NODE_ENV=production npm run css:build && react-scripts build",
    "css:build": "postcss src/tailwind/tailwind.css -o src/tailwind/tailwind.output.css",
    "css:watch": "postcss --watch src/tailwind/tailwind.css -o src/tailwind/tailwind.output.css",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
